category = "Lighting"
render_configs = ["core/stingray_renderer/renderer"]
display_name = "Sun Shadow"
activate = """
    Application.set_render_setting("debug_rendering", "true")
    Application.set_render_setting("gbuffer_sun_shadow_visualization", "true")
"""
deactivate = """
    Application.set_render_setting("gbuffer_sun_shadow_visualization", "false")
    Application.set_render_setting("debug_rendering", "false")
"""
